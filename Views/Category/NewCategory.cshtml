@model BookStore.Models.Entity.TBLCATEGORY
@{
    ViewBag.Title = "NewCategory";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    @*<div>
        <label>Category Name</label>
        <input type="text" class="form-control" name="CATEGORYNAME" />
    </div>*@
    <div>
        <label>Category Name</label>
        @Html.TextBoxFor(m=>m.CATEGORYNAME, new { @class="form-control"})
        @Html.ValidationMessageFor(m => m.CATEGORYNAME, "", new { @style="color:red"})
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn">Add Category</button>
    </div>
    <script>
        $("#btn").click(function () {
            alert("The Category Has Been Added...")
        })
    </script>
</form>

